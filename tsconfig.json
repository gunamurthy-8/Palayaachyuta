{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "types": ["react-native", "jest", "node"],
    "paths": {
      "@/*": ["./src/*"],
      "@/assets/*": ["./assets/*"]
    },
    "noUnusedLocals": true
  },
  "include": [
    "src/tests/**/*",
    "./src/**/*",
    "./assets/**/*",
    "index.d.ts",
    "*.mjs",
    ".*.mjs",
    "*.js",
    ".*.js",
    "*.ts",
    ".prettierrc.mjs"
  ],
  "exclude": ["node_modules", "_", "android", "ios"]
}
